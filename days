void proverka_day1(char* massive) //ïåðâàÿ öèôðà äíÿ
{
	if (!(massive[0] == 0 && massive[1] == 2)) // íå ôåâðàëü ïåðâàÿ äàòà
	{
		if (massive[2] > 3 || massive[2] < 0)
		{
			cout << "STRING is WRONG";
			abort();
		}
	}

	if (!(massive[6] == 0 && massive[7] == 2)) // íå ôåâðàëü âòîðàÿ äàòà
	{
		if (massive[8] > 3 || massive[9] < 0)
		{
			cout << "STRING is WRONG";
			abort();
		}
	}

	if (massive[0] == 0 && massive[1] == 2) // ôåâðàëü ïåðâàÿ äàòà
	{
		if (massive[2] > 2 || massive[2] < 0)
		{
			cout << "STRING is WRONG";
			abort();
		}
	}

	if (massive[6] == 0 && massive[7] == 2) // ôåâðàëü âòîðàÿ äàòà
	{
		if (massive[8] > 2 || massive[9] < 0)
		{
			cout << "STRING is WRONG";
			abort();
		}
	}
}

